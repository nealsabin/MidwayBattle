<Window x:Class="MidwayBattle.PresentationLayer.GameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MidwayBattle.PresentationLayer"
        mc:Ignorable="d"
        Title="Developed by Neal Sabin" 
        Height="550" 
        Width="800"
        Background="#EBEBEB">
    <Window.Resources>
        <Style x:Key="ContainerStyle" TargetType="Border">
            <Setter Property="Background" Value="#DADADA"/>
            <Setter Property="BorderBrush" Value="#525252"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="CornerRadius" Value="10"/>
            <Setter Property="Margin" Value="10"/>
        </Style>
        <Style x:Key="TopBannerButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#659BDB"/>
            <Setter Property="BorderBrush" Value="#525252"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Width" Value="38"/>
            <Setter Property="Height" Value="25"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        <Style x:Key="ContainerHeaderStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="VerticalAlignment" Value="Top"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0 5 0 5"/>
            <Setter Property="Padding" Value="0 0 0 5"/>
            <Setter Property="BorderBrush" Value="#525252"/>
            <Setter Property="BorderThickness" Value="0 0 0 1.5"/>
        </Style>
        <Style x:Key="ContainerTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#EBEBEB"/>
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="ContainerLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="SubContainerTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#DADADA"/>
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="SubContainerLabelStyle" TargetType="Label">
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
        </Style>
        <Style x:Key="SubContainerMessageTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#DADADA"/>
            <Setter Property="Foreground" Value="#525252"/>
            <Setter Property="Width" Value="auto"/>
            <Setter Property="Height" Value="auto"/>
            <Setter Property="Margin" Value="10 5 10 5"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            Content="THE BATTLE AT MIDWAY"
            Foreground="#EBEBEB"
            Background="#525252"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            FontSize="16"
            FontWeight="Medium"
            />
        <Button
            x:Name="Button_Help"
            Style="{StaticResource TopBannerButtonStyle}"
            Content="HELP"
            Margin="0 0 55 0"/>
        <Button
            x:Name="Button_Exit"
            Style="{StaticResource TopBannerButtonStyle}"
            Content="EXIT"
            Margin="0 0 10 0"
            Background="#F44721"
            Click="Button_Exit_Click"/>
        <Grid
            Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border
                Style="{StaticResource ContainerStyle}"
                Grid.Column="0">
                <Label
                    Content="Map/Controls"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </Border>
            <Border
                Style="{StaticResource ContainerStyle}"
                Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.6*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2.25*"/>
                    </Grid.RowDefinitions>
                    <Grid
                        Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Style="{StaticResource ContainerHeaderStyle}"
                            Content="MISSION CONTROL"/>
                        <Grid
                            Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label
                                Grid.Row="0"
                                Grid.Column="0"
                                Style="{StaticResource ContainerLabelStyle}"
                                Content="Name"/>
                            <TextBox 
                                Grid.Row="0"
                                Grid.Column="1"
                                Style="{StaticResource ContainerTextBoxStyle}"
                                Text="{Binding Player.Name}"/>
                            <Label 
                                Grid.Row="1"
                                Grid.Column="0"
                                Style="{StaticResource ContainerLabelStyle}"
                                Content="Age"/>
                            <TextBox 
                                Grid.Row="1"
                                Grid.Column="1"
                                Style="{StaticResource ContainerTextBoxStyle}"
                                Text="{Binding Player.Age}"/>
                            <Label 
                                Grid.Row="2"
                                Grid.Column="0"
                                Style="{StaticResource ContainerLabelStyle}"
                                Content="Country"/>
                            <TextBox 
                                Grid.Row="2"
                                Grid.Column="1"
                                Style="{StaticResource ContainerTextBoxStyle}"
                                Text="{Binding Player.Country}"/>
                            <Label 
                                Grid.Row="3"
                                Grid.Column="0"
                                Style="{StaticResource ContainerLabelStyle}"
                                Content="Title"/>
                            <TextBox 
                                Grid.Row="3"
                                Grid.Column="1"
                                Style="{StaticResource ContainerTextBoxStyle}"
                                Text="{Binding Player.Title}"/>
                        </Grid>
                    </Grid>
                    <Border
                        Style="{StaticResource ContainerStyle}"
                        Grid.Row="1"
                        Background="#EBEBEB"
                        Margin="10 5 10 5">
                        <Grid
                            Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Label
                                Style="{StaticResource ContainerHeaderStyle}"
                                Content="INTEL"
                                FontSize="12"/>
                            <TextBox
                                Grid.Row="1"
                                Style="{StaticResource SubContainerMessageTextBoxStyle}"
                                Text="{Binding MessageDisplay, Mode=OneWay}"/>    
                        </Grid>

                    </Border>
                    
                    <Grid
                        Grid.Row="2">
                        <Border
                            Style="{StaticResource ContainerStyle}"
                            Background="#EBEBEB"
                            Margin="10 5 10 10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="1.5*"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Style="{StaticResource ContainerHeaderStyle}"
                                    Content="SHIP INTEGRITY"
                                    FontSize="12"/>
                                <Grid
                                    Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource SubContainerLabelStyle}"
                                        Content="Health"/>
                                    <TextBox 
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource SubContainerTextBoxStyle}"
                                        Text="{Binding Player.Health}"/>
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource SubContainerLabelStyle}"
                                        Content="Lives"/>
                                    <TextBox 
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Style="{StaticResource SubContainerTextBoxStyle}"
                                        Text="{Binding Player.Lives}"/>
                                    <Label
                                        Grid.Row="2"
                                        Grid.Column="0"
                                        Style="{StaticResource SubContainerLabelStyle}"
                                        Content="Experience"/>
                                    <TextBox 
                                        Grid.Row="2"
                                        Grid.Column="1"
                                        Style="{StaticResource SubContainerTextBoxStyle}"
                                        Text="{Binding Player.ExperiencePoints}"/>
                                </Grid>
                                <Label
                                    Grid.Row="2"
                                    Grid.Column="1"
                                    Style="{StaticResource ContainerHeaderStyle}"
                                    Content="ENEMY SHIP"
                                    FontSize="12"
                                    BorderBrush="#F44721"/>
                                <Grid
                                    Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Style="{StaticResource SubContainerLabelStyle}"
                                        Content="Health"/>
                                    <TextBox 
                                        Grid.Row="0"
                                        Grid.Column="1"
                                        Style="{StaticResource SubContainerTextBoxStyle}"
                                        Text="{Binding Enemy.Health}"/>
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Style="{StaticResource SubContainerLabelStyle}"
                                        Content="Lives"/>
                                    <TextBox 
                                        Grid.Row="1"
                                        Grid.Column="1"
                                        Style="{StaticResource SubContainerTextBoxStyle}"
                                        Text="{Binding Enemy.Lives}"/>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>
            <Border
                Style="{StaticResource ContainerStyle}"
                Grid.Column="2">
                <Label
                    Content="Inventory/Actions/Stats"
                    FontSize="20"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"/>
            </Border>

        </Grid>
    </Grid>
</Window>
